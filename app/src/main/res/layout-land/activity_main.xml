<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/onetaka"
        android:layout_width="@dimen/taka_width"
        android:layout_height="@dimen/taka_height"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text="1: "
        android:textSize="@dimen/taka_fontSize"
        app:layout_constraintStart_toEndOf="@+id/twenty"
        app:layout_constraintTop_toBottomOf="@+id/twotaka" />

    <TextView
        android:id="@+id/twotaka"
        android:layout_width="@dimen/taka_width"
        android:layout_height="@dimen/taka_height"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text="2: "
        android:textSize="@dimen/taka_fontSize"
        app:layout_constraintBottom_toTopOf="@+id/onetaka"
        app:layout_constraintStart_toEndOf="@+id/fifty"
        app:layout_constraintTop_toBottomOf="@+id/fivetaka" />

    <TextView
        android:id="@+id/fifty"
        android:layout_width="@dimen/taka_width"
        android:layout_height="@dimen/taka_height"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:text="50: "
        android:textSize="@dimen/taka_fontSize"
        app:layout_constraintBottom_toTopOf="@+id/twenty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oneH" />

    <TextView
        android:id="@+id/fiveH"
        android:layout_width="@dimen/taka_width"
        android:layout_height="@dimen/taka_height"
        android:layout_marginStart="33dp"
        android:text="500: "
        android:textSize="@dimen/taka_fontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <TextView
        android:id="@+id/fivetaka"
        android:layout_width="@dimen/taka_width"
        android:layout_height="@dimen/taka_height"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text="5: "
        android:textSize="@dimen/taka_fontSize"
        app:layout_constraintBottom_toTopOf="@+id/twotaka"
        app:layout_constraintStart_toEndOf="@+id/oneH"
        app:layout_constraintTop_toBottomOf="@+id/ten" />

    <TextView
        android:id="@+id/ten"
        android:layout_width="@dimen/taka_width"
        android:layout_height="@dimen/taka_height"
        android:layout_marginStart="60dp"
        android:text="10: "
        android:textSize="@dimen/taka_fontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fiveH"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <TextView
        android:id="@+id/twenty"
        android:layout_width="@dimen/taka_width"
        android:layout_height="@dimen/taka_height"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:text="20: "
        android:textSize="@dimen/taka_fontSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifty" />

    <TextView
        android:id="@+id/oneH"
        android:layout_width="@dimen/taka_width"
        android:layout_height="@dimen/taka_height"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:text="100: "
        android:textSize="@dimen/taka_fontSize"
        app:layout_constraintBottom_toTopOf="@+id/fifty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fiveH" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Taka: "
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="@dimen/row_width"
        android:layout_height="@dimen/row_height"
        android:layout_marginStart="526dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="@dimen/row_width"
        android:layout_height="@dimen/row_height"
        android:layout_marginStart="526dp"
        android:layout_marginEnd="@dimen/row_marigin_right"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="@dimen/row_width"
        android:layout_height="@dimen/row_height"
        android:layout_marginStart="526dp"
        android:layout_marginEnd="@dimen/row_marigin_right"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="@dimen/row_width"
        android:layout_height="@dimen/row_height"
        android:layout_marginStart="526dp"
        android:layout_marginEnd="@dimen/row_marigin_right"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>